{
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "plugins": ["prettier", "promise"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],

    "prettier/prettier": [
      "error",
      { "trailingComma": "es5", "singleQuote": true }
    ]
  },
  "env": {
    "node": true,
    "es6": true
  }
}
